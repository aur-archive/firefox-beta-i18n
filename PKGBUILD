build() {
	cd "${srcdir}"
	for _langfile in *.xpi; do
		_lang=${_langfile/.xpi/}
		_lang=${_lang/firefox-beta-i18n-${pkgver}-/}
		install -D -m 644 ${srcdir}/${_langfile} ${pkgdir}/usr/lib/firefox-4.0b/extensions/langpack-${_lang}@firefox.mozilla.org.xpi
	done
}
